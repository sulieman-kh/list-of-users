{{! Modal of User }}
{{#if modal}}
  <div
    class="modal fade show"
    id="myModal"
    tabindex="-1"
    role="dialog"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
  >
    {{#each modal}}
      <div
        style=""
        class="modal-dialog modal-dialog-centered modal-dialog-scrollable"
      >
        <div class="modal-content border-0 p-2" style="border-radius: 16px;">
          <div class="modal-header border border-white">
            <h2
              class="modal-title color-plumbum fs-24"
              style="font-weight: 700;"
            >{{this.name}}</h2>
            <button
              type="button"
              class="btn-close opacity-100"
              style="font-size: 20px;"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <table class="table table-borderless">
              <tbody>
                <tr>
                  <td
                    scope="row"
                    style="font-size: 18px; padding-left:0"
                  >–¢–µ–ª–µ—Ñ–æ–Ω:</td>
                  <td class="color-grey">{{this.phone}}</td>
                </tr>
                <tr>
                  <td
                    scope="row"
                    style="font-size: 18px; padding-left:0;"
                  >–ü–æ—á—Ç–∞:</td>
                  <td class="color-grey">{{this.email}}</td>
                </tr>
                <tr>
                  <td scope="row" style="font-size: 18px; padding-left:0;">–î–∞—Ç–∞
                    –ø—Ä–∏–µ–º–∞:</td>
                  <td class="color-grey">{{this.hire_date}}</td>
                </tr>
                <tr>
                  <td
                    scope="row"
                    style="font-size: 18px; padding-left:0;"
                  >–ü–æ–¥—Ä–∞–∑–¥–µ–ª–µ–Ω–∏–µ:</td>
                  <td class="color-grey">{{this.department}}</td>
                </tr>

              </tbody>
            </table>
            <div class="d-grid gap-1;">
              <span style="font-size: 18px;">–î–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω–∞—è –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è:</span>

              <span class="color-grey">{{this.position_name}}</span>
