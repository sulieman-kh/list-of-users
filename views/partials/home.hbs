{{/if}}

{{! User's Cards }}
<div class="row gap-4 mx-auto justify-content-center">
  {{#each data}}
    <form
      class="card shadow"
      style="width: 22rem; height:18rem; border-radius:14px"
    >
      <a
        href="/?term={{this.name}}"
        type="button"
        class="card-block card-link stretched-link text-decoration-none"
      >
        <div class="card-body">
          <h2
            class="card-title color-plumbum fs-24"
            style="font-weight: 700;"
          >{{this.name}}</h2>
          <div class="mt-4">
            <div class="d-flex align-items-center gap-3 ml-5 mb-2">
              <i
                class="fa fa-mobile"
                aria-hidden="true"
                style="color:#432eab; font-size:22px"
              ></i>
              <p
                class="card-subtitle text-muted fs-14 color-grey"
              >{{this.phone}}</p>
            </div>
            <div class="d-flex align-items-center gap-3">
              <i
                class="fa fa-envelope-o"
                aria-hidden="true"
                style="color:#432eab"
              ></i>
              <p
                class="card-text text-muted fs-14 color-grey"
              >{{this.email}}</p>
            </div>
          </div>
        </div>
      </a>
    </form>
  {{/each}}
</div>